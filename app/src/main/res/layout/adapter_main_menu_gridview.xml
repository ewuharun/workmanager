<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:elevation="15dp"
        app:cardCornerRadius="20dp"
        android:layout_height = "wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/gridMainMenuImage"
                    android:layout_marginTop="40dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"

                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="badge"
                    android:visibility="invisible"
                    android:gravity="right"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_alignRight="@+id/gridMainMenuImage"
                    android:layout_alignEnd="@+id/gridMainMenuImage" />
            </RelativeLayout>
            <TextView
                android:id="@+id/gridMainMenuText"
                android:text=" Title "
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_below="@+id/llMainMenuAdapter"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                />

    </androidx.cardview.widget.CardView>

</LinearLayout>
